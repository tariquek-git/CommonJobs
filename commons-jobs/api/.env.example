NODE_ENV=development
PORT=4010
# Storage mode: file (local JSON) or supabase (hosted Postgres via Supabase)
# Production deployments must use supabase.
STORAGE_PROVIDER=file
DATA_FILE=data/jobs.json
CLICK_DATA_FILE=data/clicks.json
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JOBS_TABLE=job_board_jobs
SUPABASE_CLICKS_TABLE=job_board_clicks
# Comma-separated allowlist. Include custom domain + Vercel domain in production.
CLIENT_ORIGIN=http://localhost:3000,http://localhost:3010,http://localhost:5173
# Required in non-test mode
ADMIN_USERNAME=replace_admin_username
# Generate with: node --input-type=module -e "import bcrypt from 'bcryptjs'; const hash = await bcrypt.hash(process.argv[1], 12); console.log(hash);" "ReplaceWithStrongPassword"
ADMIN_PASSWORD_HASH=replace_with_bcrypt_hash
# Required in non-test mode, minimum 32 chars
ADMIN_TOKEN_SECRET=replace-with-at-least-32-random-characters
# Safe default is false. Set to 1 when behind exactly one trusted reverse proxy.
TRUST_PROXY=false
GEMINI_API_KEY=
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_SUBMIT=20
RATE_LIMIT_MAX_ADMIN_LOGIN=30
RATE_LIMIT_MAX_CLICK=60
CLICK_DEDUPE_WINDOW_MS=60000
