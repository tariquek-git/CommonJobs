# Frontend build-time setting.
# Default is /api (proxied to http://127.0.0.1:4010 in vite.config.ts).
VITE_API_BASE_URL=/api

# Runtime settings used by the Vercel serverless API.
# Keep STORAGE_PROVIDER=supabase in production.
STORAGE_PROVIDER=supabase
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JOBS_TABLE=job_board_jobs
SUPABASE_CLICKS_TABLE=job_board_clicks

ADMIN_USERNAME=
# Generate with:
# node --input-type=module -e "import bcrypt from 'bcryptjs'; console.log(await bcrypt.hash(process.argv[1], 12));" "ReplaceWithStrongPassword"
ADMIN_PASSWORD_HASH=
# Minimum 32 random characters.
ADMIN_TOKEN_SECRET=

# Comma-separated allowlist of trusted origins.
CLIENT_ORIGIN=https://fintechcommons.com,https://common-jobs.vercel.app
TRUST_PROXY=1

GEMINI_API_KEY=
GEMINI_MODEL=gemini-flash-latest

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_SUBMIT=20
RATE_LIMIT_MAX_ADMIN_LOGIN=30
RATE_LIMIT_MAX_CLICK=60
RATE_LIMIT_MAX_AI=30
CLICK_DEDUPE_WINDOW_MS=60000
